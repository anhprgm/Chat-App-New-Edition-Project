<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/xam"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activities.SignUpActivity">

    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/slayer"
            android:layout_width="wrap_content"
            android:layout_height="447dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/background_slayer"
            android:contentDescription="@string/app_name">
        </RelativeLayout>
        <TextView
            android:fontFamily="@font/hellozone"
            android:id="@+id/secondTextDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:text="ogin"
            android:textSize="40sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:background="@drawable/background_full_shadow">
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp"
                android:hint="Email"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"/>
            <EditText
                android:hint="Password"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:inputType="textPassword"
                android:id="@+id/password"
                android:layout_marginEnd="40dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/enter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="visible"
                android:src="@drawable/enter_btn"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/signUpText"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotomedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have n account. Login"/>
            <ProgressBar
                android:id="@+id/loader"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textMainDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="179dp"
            android:layout_marginTop="135dp"
            android:text="@string/sign_up"
            android:fontFamily="@font/hellozone"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:tintMode="src_atop"
        android:src="@drawable/ic_logo_image" />
</LinearLayout>